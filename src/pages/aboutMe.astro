---
import Layout from '../layouts/mainlayout.astro'
import Showcase from '../components/showcase.astro';
import { Image } from 'astro:assets';
import peppi from '../images/PeppiSundell.jpg'
---
<header class="header">

    <div class="otsikko">
        <a href="/">
            <h1>Peppi Sundell</h1>
        </a>
    </div>

    <div class="grid grid-cols-4 gap-0">
        <a href="/">
            <div class="test" id="koti">
                <p>Home</p>
            </div>
        </a>

        <a href="/aboutMe">
            <div class="test" id="minusta">
                <p>About me</p>
            </div>
        </a>
        
        <a href="/code">
            <div class="test" id="koodi">
                <p>Code</p>
            </div>
        </a>

        <a href="/maps">
            <div class="test" id="kartat">
                <p>Maps</p>
            </div>
        </a>
        
    </div>

</header>

<Layout>
    <div class="grid grid-cols-1 lg:grid-cols-2">
        <div class="cv">
            <Image src={peppi} alt="">
        </div>
        <div class="text">
            <p>
                Hi! Welcome to a website I have made. I am Peppi Sundell a 20-year old
                student from Espoo. I'm currently studying my third year in aalto university.
            </p>
        </div>
    </div>
    
</Layout>

<style>

    body {
        background-color: rgb(230, 230, 230);
    }

    .text {
        text-align: center;
        border: 1px solid rgb(57, 57, 57);
        padding: 50px;
        font-family: 'Times New Roman', Times, serif;
        font-size: 20px;
    }

    .cv {
        border: 1px solid rgb(57, 57, 57);
        padding: 3px;
    }

    img {
        border: 1.5px solid rgb(57, 57, 57);
    }


    .header {
        background-color: rgb(230, 230, 230);
    }

    .header .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
    }


    .test:hover {
        background-color: rgb(57, 57, 57);
        color: rgb(230, 230, 230);
    }

    .otsikko {
        text-align: center;
        color: rgb(57, 57, 57);
        font-family: 'Times New Roman', Times, serif;
        font-size: 60px;
        padding: 20px;
        border: 1px solid rgb(57, 57, 57);
        transition: 0.3s;
    }

    .test {
        border: 1px solid rgb(57, 57, 57);
        text-align: center;
        color: rgb(57, 57, 57);
        font-size: 25px;
        font-family: 'Times New Roman', Times, serif;
        transition: 0.3s;
    }

    .otsikko:hover {
        background-color: rgb(57, 57, 57);
        color: rgb(230, 230, 230);
    }

    #minusta {
        background-color: rgb(90,90,90);
        color: rgb(230, 230, 230);
    }

    #minusta:hover {
        background-color: rgb(57, 57, 57);
    }



</style>