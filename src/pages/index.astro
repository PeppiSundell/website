---
import Layout from "../layouts/mainlayout.astro";
import Showcase from "../components/showcase.astro";
import Header from "../components/header.astro";
---

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<header class="header">
    <div class="headline">
        <a href="/">
            <h1>Peppi Sundell</h1>
        </a>
    </div>

    <div class="grid grid-cols-4 gap-0">
        <a href="/">
            <div class="navigation" id="home">
                <p>Home</p>
            </div>
        </a>

        <a href="/me">
            <div class="navigation" id="me">
                <p>Me</p>
            </div>
        </a>

        <a href="/code">
            <div class="navigation" id="code">
                <p>Code</p>
            </div>
        </a>

        <a href="/maps">
            <div class="navigation" id="maps">
                <p>Maps</p>
            </div>
        </a>
    </div>
</header>

<Layout>
    <Showcase />
</Layout>

<style>
    .header {
        background-color: rgb(230, 230, 230);
    }

    .header .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
    }

    .navigation:hover {
        background-color: rgb(57, 57, 57);
        color: rgb(230, 230, 230);
    }

    .headline {
        text-align: center;
        color: rgb(57, 57, 57);
        font-family: "Times New Roman", Times, serif;
        font-size: 60px;
        padding: 20px;
        border: 1px solid rgb(57, 57, 57);
        transition: 0.3s;
    }

    .navigation {
        border: 1px solid rgb(57, 57, 57);
        text-align: center;
        color: rgb(57, 57, 57);
        font-size: 25px;
        font-family: "Times New Roman", Times, serif;
        transition: 0.3s;
    }

    .headline:hover {
        background-color: rgb(57, 57, 57);
        color: rgb(230, 230, 230);
    }

    #home {
        background-color: rgb(90, 90, 90);
        color: rgb(230, 230, 230);
    }

    #home:hover {
        background-color: rgb(57, 57, 57);
    }
</style>
