---
import Layout from '../layouts/mainlayout.astro'
import Showcase from '../components/showcase.astro';
import Header from '../components/header.astro';
---
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<header class="header">

    <div class="otsikko">
        <a href="/">
            <h1>Peppi Sundell</h1>
        </a>
    </div>

    <div class="grid grid-cols-4 gap-0">
        <a href="/">
            <div class="test" id="koti">
                <p>Home</p>
            </div>
        </a>

        <a href="/aboutMe">
            <div class="test" id="minusta">
                <p>About me</p>
            </div>
        </a>
        
        <a href="/code">
            <div class="test" id="koodi">
                <p>Code</p>
            </div>
        </a>

        <a href="/maps">
            <div class="test" id="kartat">
                <p>Maps</p>
            </div>
        </a>
        
    </div>

</header>

<Layout>
    <Showcase/>
</Layout>

<style>
    
    .header {
        background-color: rgb(230, 230, 230);
    }

    .header .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
    }


    .test:hover {
        background-color: rgb(57, 57, 57);
        color: rgb(230, 230, 230);
    }

    .otsikko {
        text-align: center;
        color: rgb(57, 57, 57);
        font-family: 'Times New Roman', Times, serif;
        font-size: 60px;
        padding: 20px;
        border: 1px solid rgb(57, 57, 57);
        transition: 0.3s;
    }

    .test {
        border: 1px solid rgb(57, 57, 57);
        text-align: center;
        color: rgb(57, 57, 57);
        font-size: 25px;
        font-family: 'Times New Roman', Times, serif;
        transition: 0.3s;
    }

    .otsikko:hover {
        background-color: rgb(57, 57, 57);
        color: rgb(230, 230, 230);
    }

    #koti {
        background-color: rgb(90,90,90);
        color: rgb(230, 230, 230);
    }

    #koti:hover {
        background-color: rgb(57, 57, 57);
    }

</style>